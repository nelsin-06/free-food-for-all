<div class="container-sm">
  <div class="row">
    <div class="col-md-5">
      <h1 class="fw-lighter text-center">Lista de ingredientes disponibles</h1>
      <table class="table table-striped table-light border">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          {{#each productos}}
          <tr>
            <td><strong>{{producto}}</strong></td>
            <td>{{cantidad}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <h1>Historial de compras</h1>
      <div class="card" style="width: 30rem;">
        <div class="card-body">
          <h5 class="card-title"></h5>
          {{#each historialCompras}}
          <p class="card-text">{{this.compras}}</p>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>