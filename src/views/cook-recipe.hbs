<div class="container">
<h1 class="fw-lighter">Ordenes pendientes</h1>
{{#if recetaPendiente}}
<table class="table table-striped table-light border">
    <thead>
        <tr>
            <th>Nombre de la receta</th>
            <th colspan="5">Ingredientes</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><strong>{{recetaPendiente.receta.nombre}}</strong></td>
            {{#each recetaPendiente.receta.ingredients}}
            <td>{{this.cantidad}} {{this.ingrediente}}</td>
            {{/each}}
        </tr>
    </tbody>
</table>
<form action="/cook-order" method="post">
    <div class="d-grid gap-2 col-6 mx-auto">
    <button class="btn btn-outline-secondary">Preparar receta</button>
</div>
</form>
</div>
{{else}}
<h2>No hay ordenes pendientes por preparar</h2>
{{/if}}
